<body>

<div class="bg-pattern"></div>

<div class="container" id="login-container">
    <h1>ВВЕДІТЬ КОД АКТИВАЦІЇ</h1>
    
    <div class="terminal-box" id="box">
        <input type="text" id="passInput" maxlength="3" placeholder="???">
        <br>
        <button onclick="checkCode()">ЗАПУСК СИСТЕМИ</button>
    </div>

    <div id="error-msg"></div>
</div>

<div id="success-screen">
    <img id="victoryImg" src="https://images.unsplash.com/photo-1531641442308-9279b7237c67?ixlib=rb-4.0.3&auto=format&fit=crop&w=1470&q=80" alt="Victory">
</div>

<script>
    // ЗАМІНІТЬ ЦЕ ПОСИЛАННЯ НА СВОЄ (наприклад, картинку з Тоботом)
    const imageUrl = 'https://i.ibb.co/Xz9Zxq7/tobot-victory.jpg'; 
    document.getElementById('victoryImg').src = imageUrl;

    function checkCode() {
        const input = document.getElementById('passInput');
        const error = document.getElementById('error-msg');
        const box = document.getElementById('box');
        const val = input.value.trim();

        if (val === "231") {
            document.getElementById('success-screen').style.display = 'block';
            // Можна додати звук перемоги, якщо захочете
        } else {
            error.innerText = "ПАРОЛЬ НЕ ВГАДАЛИ! Спробуй поміняти цифри місцями.";
            box.classList.add('shaking');
            setTimeout(() => box.classList.remove('shaking'), 500);
            input.value = "";
        }
    }

    // Дозволити натискання Enter
    document.getElementById('passInput').addEventListener('keypress', function (e) {
        if (e.key === 'Enter') {
            checkCode();
        }
    });
</script>

